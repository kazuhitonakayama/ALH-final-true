<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%# ユーザー名を入力する欄 %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form" , autofocus: true, autocomplete: "name" %>
  </div>
  
  <%# メールアドレスを入力する欄 %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,class: "form", autofocus: true, autocomplete: "email" %>
  </div>

  <%# パスワードを入力する欄 %>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,class: "form", autocomplete: "new-password" %>
  </div>

  <%# 再度パスワードを入力する欄 %>
  <% if false %>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation,class: "form" ,autocomplete: "new-password" %>
    </div>
  <% end %>


  <%# 送信ボタン %>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

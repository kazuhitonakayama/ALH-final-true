<div class="topPage">
  <div class="listWrapper">
    <%# TopControllerのindexアクションで定義した@listsの箱の中に入っているデータを取り出し、それぞれをlistに入れる命令 %>
    <% @lists.each do |list| %>
      <div class="list">
        <div class="list_header">
          <h2 class="list_header_title"><%= list.title %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>